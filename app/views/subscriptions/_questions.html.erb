<%= form_with url: questions_path do |f| %>

  <% survey.questions.each do |question| %>
    <div>
      <% if question.question_type == 'long_answer' %>
        <%= question.question %>
        <%= f.text_field question.id, data: { questions_target: 'questionsForm' }, class: 'answer_input' %>
      <% else %>
        <%= question.question %>
        <%= f.select question.id, question.alternatives, {}, data: { questions_target: 'questionsForm' }, class: 'answer_input' %>
    <% end %>
    </div>
  <% end %>

  <%= f.submit 'Save', data: {
    controller: 'questions',
    action: 'questions#submit',
    survey_id: survey.id
  } %>
<% end %>
